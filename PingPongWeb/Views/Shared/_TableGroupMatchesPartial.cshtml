@using PingPongWeb.Models.Dto

@model List<MatchDTO>
@if (Model.Count != 0)
{
    <table class="table table-dark">
        <thead>
            <tr>

                <th>

                </th>
                <th>

                </th>
                <th>

                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Player1
                    </td>
                    <td>
                        @item.ResultPlayer1 : @item.ResultPlayer2
                    </td>
                    <td>
                        @item.Player2
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
