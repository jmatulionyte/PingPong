                        <li class="spacer">&nbsp;</li>
                    </ul>
                    <ul class="round round 6">
                        @{ ViewData["SpacerType"] = "spacer";}
                        <partial name="_PlayoffGraphRoundPartial" model="Model.PlayoffMatchesForGraph[19]" view-data="ViewData" />

                        <li class="spacer">&nbsp;</li>

                    </ul>
                    <ul class="round" style="width:180px">
                        <li class="game game-top winner" style="padding-left: 5px">1st - @Model.PlayoffWinner</li>
                    </ul>
                }

                <div>
                    @if (Model.PlayoffMatchesForGraph.Count != 0)
                    {

                        <ul class="round" style="position:absolute;right:500px; bottom:60px">
                            <br />
                            @{ ViewData["SpacerType"] = "spacer";}
                            <partial name="_PlayoffGraphRoundPartial" model="Model.PlayoffMatchesForGraph[20]" view-data="ViewData" />
                            <li class="game game-top winner" style="padding-left: 5px; position: absolute; bottom:50px; right:-190px; width: 190px">3rd - @Model.Playoff3rdPlace</li>
                        </ul>
                    }
                </div>
            </main>
            

        </div>
    </div>

