                        <br />
                        <br />
                        <br />
                        <br />
                        @{ ViewData["SpacerType"] = "static_spacer_half";}
                        <partial name="_PlayoffGraphRoundPartial" model="Model.PlayoffMatchesForGraph[3]" view-data="ViewData" />

                        <br />
                        <br />
                        <br />
                        <br />
                        @{ ViewData["SpacerType"] = "static_spacer_half";}
                        <partial name="_PlayoffGraphRoundPartial" model="Model.PlayoffMatchesForGraph[2]" view-data="ViewData" />
                    </ul>
                    <ul class="round round2">
                        <br />
                        <br />
                        @{ ViewData["SpacerType"] = "static_spacer_half";}
                        <partial name="_PlayoffGraphRoundPartial" model="Model.PlayoffMatchesForGraph[5]" view-data="ViewData" />

                        <br />
